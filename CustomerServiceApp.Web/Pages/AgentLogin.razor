@page "/agent/login"
@layout TicketLayout
@inject ApiService ApiService
@using CustomerServiceApp.Application.Authentication
@using CustomerServiceApp.Application.Common.DTOs

<PageTitle>Agent Login</PageTitle>

<LoginForm Title="Agent Login"
           HeaderClass="bg-success text-white"
           ButtonClass="btn-success"
           DemoCredentials="@(DemoCredentials)"
           RedirectUrl="/agent/tickets"
           IsUserAuthenticated="@(state => state.IsAuthenticated && state.IsAgent)"
           LoginApiCall="@ApiService.AgentLoginAsync"
           ValidateUserType="@(result => result.User is AgentDto)" />
@code {
    private string DemoCredentials = "Demo users: agent1@example.com (password: password123)";
}