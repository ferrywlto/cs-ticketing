@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime

<div class="page-fullscreen">
    <main>
        <article class="content-fullscreen">
            @Body
        </article>
    </main>
</div>

<link href="css/ticket-layout.css" rel="stylesheet" />

<style>
    .page-fullscreen {
        height: 100vh;
        width: 100vw;
    }

    .content-fullscreen {
        height: 100%;
        padding: 0;
        margin: 0;
    }
</style>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initializeTicketLayout");
        }
    }
}
