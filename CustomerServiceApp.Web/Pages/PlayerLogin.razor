@page "/player/login"
@layout TicketLayout
@inject ApiService ApiService
@using CustomerServiceApp.Application.Authentication
@using CustomerServiceApp.Application.Common.DTOs
@using CustomerServiceApp.Web.ViewModels

<PageTitle>Player Login</PageTitle>

<LoginForm Title="Player Login"
           HeaderClass=""
           ButtonClass="btn-primary"
           DemoCredentials="@(DemoCredentials)"
           RedirectUrl="/player/tickets"
           IsUserAuthenticated="@(state => state.IsAuthenticated && state.IsPlayer)"
           LoginApiCall="@ApiService.PlayerLoginAsync"
           ValidateUserType="@(result => result.User is PlayerDto)" />
@code {
    private string DemoCredentials = "Demo users: player1@example.com, player2@example.com, player3@example.com (password: password123)";
}